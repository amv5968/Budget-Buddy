{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "jsx": "react-native",
    "strict": true,
    "types": ["expo", "react", "react-native"],
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["**/*.ts", "**/*.tsx", "expo-env.d.ts"]
}
